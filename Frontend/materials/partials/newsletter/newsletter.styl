@import 'nib'

.newsletter
	width 100%
	text-align center
	padding 40px 0
	
	p
		font-size 24px
		font-family 'Open Sans'
		color #032d5f
		margin 0 auto 40px auto
		text-transform uppercase
	
		&:nth-child(2)
			max-width 700px
			font-family 'Open Sans Bold'
	
	input
		float left
		margin 0
		width 75%
		height 60px
		border 2px solid #b6b6b6
		padding 0 0 0 25px
		color #777777
		font-size 20px
		font-family 'Open Sans'
		
		@media ( max-width: 480px )
			width 100%
			margin 0 0 10px 0	
	
	button		
		margin 0
		width 25%
		height 60px
		background #022e5f
		font-family 'Open Sans Bold'
		font-size 20px
		color #fff
		line-height 30px
		border 0
		
		@media ( max-width: 480px )
			width 100%	