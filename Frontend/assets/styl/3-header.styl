@import 'nib'

header
	width 100%
	height 531px
	box-sizing border-box
	padding-top 15px
	background url( 'https://br0.understorage.com.br/v1/AUTH_static/images/bg-under-landing.jpg' ) no-repeat top center
	background-size cover
	position relative
	
	
	
	#nav-icon3
		width 50px
		height 15px
		position relative
		-webkit-transform rotate(0deg)
		-moz-transform rotate(0deg)
		-o-transform rotate(0deg)
		transform rotate(0deg)
		-webkit-transition .5s ease-in-out
		-moz-transition .5s ease-in-out
		-o-transition .5s ease-in-out
		transition .5s ease-in-out
		cursor pointer
		float right
		display none
		z-index 999999
		@media ( max-width: 992px )
			display block
		
		&.fixed
			@media ( max-width: 768px )
				position fixed
				top 15px
				right 15px
	

	#nav-icon3 span
		display block
		position absolute
		height 9px
		width 100%
		background #fff
		border-radius 9px
		opacity 1
		left 0
		-webkit-transform rotate(0deg)
		-moz-transform rotate(0deg)
		-o-transform rotate(0deg)
		transform rotate(0deg)
		-webkit-transition .25s ease-in-out
		-moz-transition .25s ease-in-out
		-o-transition .25s ease-in-out
		transition .25s ease-in-out
	
	#nav-icon3 span:nth-child(1)
		top 0px
	

	#nav-icon3 span:nth-child(2)
		top 15px
		
	#nav-icon3 span:nth-child(3)
		top 30px
	

	#nav-icon3.open span:nth-child(1)
		top 15px
		width 0%
		left 50%
	

	#nav-icon3.open span:nth-child(2)
		-webkit-transform rotate(45deg)
		-moz-transform rotate(45deg)
		-o-transform rotate(45deg)
		transform rotate(45deg)
	

	#nav-icon3.open span:nth-child(3)
		-webkit-transform rotate(-45deg)
		-moz-transform rotate(-45deg)
		-o-transform rotate(-45deg)
		transform rotate(-45deg)
		top 15px
	

	#nav-icon3.open span:nth-child(4)
		top 15px
		width 0%
		left 50%
	
	.logo
		@media ( max-width 992px )
			padding-left 0
			padding-right 0
			margin-top 6px
	.menu
		margin-top 10px
		@media ( max-width 992px )
			padding-left 0
			padding-right 0
			margin-top 0
			nav
				display none
				
		ul
			float right
		li
			&.menu-item
				float left
				box-sizing border-box
				margin-right 35px
				list-style none
				text-align center
				@media ( min-width 1800px )
					margin-right 35px
				@media ( max-width 1800px )
					margin-right 20px
		a
			color #fff
			text-decoration none
			font-family 'Open Sans', sans-serif
			text-transform uppercase
			@media ( min-width 1600px )
				font-size 14px
			@media ( max-width 1600px )
				font-size 12px
	.image
		position absolute
		top 140px
		left 185px
		@media ( max-width 992px )
			width 90%
			top 50%
			left 50%
			transform translate( -50%, -50% )
		img
			max-width 100%
	.text
		background rgba( 0, 0, 0, .8 )
		position absolute
		bottom 50px
		left 0
		width 100%
		padding 10px 0
		text-align center
		h2
			margin 0
			color #fff
			font-family 'Open Sans', sans-serif
			font-size 30px
			@media ( max-width 992px )
				font-size 25px
			
		.coin
			color #fdb832
		
		.orange
			color #fdb832
			vertical-align -webkit-baseline-middle
		
		.big
			font-size 60px
			font-weight bolder
			letter-spacing -9px
		
		.top
			vertical-align top
			width 10px
			display inline-block
			line-height 9px
			margin 20px 0 0 0
	
	.hidden-menu
		position fixed
		top 0
		left 0
		background #000
		height 100%
		width 100%
		z-index 9999
		text-align center
		padding 40px 0
		display none
		
		img
			margin 0 0 20px 0
		
		ul
			padding 0
			float none
		
		li
			&.menu-item
				float none
				display block
				margin 25px 0
				a
					font-size 16px
		
		.close-menu
			color #fff
			font-size 40px
			font-family 'Open Sans'
			position fixed
			top 0
			right 20px