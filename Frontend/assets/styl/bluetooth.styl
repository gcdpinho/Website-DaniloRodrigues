@import 'nib'
.bau
	background-position 28% 30% !important
	background-size 600% !important
	display inline-block
	position absolute
	padding-bottom 40%
	margin-left 18%
	width 97%
	bottom 0
.title-blue
	font-family roboto_black
	font-size 190%
	color #3d616f
	text-shadow #fff 1px -1px 6px, #fff -1px 1px 6px, #fff 1px 1px 6px, #fff -1px -1px 6px

.bluetooth
	.mb3
		margin-bottom 3% 
	.box
		border-radius 0.2em
		padding-bottom 2%
		background-color #fcfae1
		//background url("../img/derrota-e-vitÂ¢ria.png") no-repeat
		border 2px solid #513e2f
	
	.container-taggle
		position absolute !important
		right 3%
		bottom 33%
	
	.fundo-button
		background-color #fff
		border-radius 39%
		display inline-flex
		width 18%
		margin-top 64%
		float right
		bottom 29%
		position absolute
		button
			border-radius 50%
			display inline-block !important
			width 49%
			padding-bottom 39%
			outline 0
			border none

	.ativado
		background-color #2c9662

	.desativado
		background-color #e84c3d

	.title-box
		color #3d616f
		font-size 1em
		font-family roboto_black
	.btn-group
		width 94%
		button
			display inline-block !important
			background-color #fff
			color #3d616f
			border-radius 0.2em
			border none
			box-shadow 0px 1px 3px #000
	.border
		border-bottom 1px solid #513e2f

	.device
		width 87%
		margin 0 auto
		span
			margin-left 5%
			font-family roboto
			display block
			font-size 0.8em

	.device-name
		color #686967
	.encontrados
		text-align left
		width 87%
		display block
		margin 0 auto
		margin-bottom 20%
	.status
		color #979797
		font-size 0.6em !important
		margin-top -0.4em
		padding-bottom 0.2em

	.list-devices
		height 5.6em
		overflow-y auto
		text-align left
		margin 0.5em 0.4em
	.msg
		color #686967
		font-family roboto
		font-size 66%
		display block
		margin-top 0.6em
		
