@import 'nib'

@media screen and (min-width: 1024px)
	.numero
		font-size 1.3em !important
	.letra-ilha
		font-size 1em !important
	.title
		font-size 2.2em !important
html
	height 100%
body
	font-size 16px
	overflow hidden
	width 100%
	height 100%
	display table

.layout-padrao
	background: radial-gradient(#7bc1d0, #60aac6, #3484b6)

main
	display table-cell
	vertical-align middle
.sprite
	background url("../img/sprite.png")

.center
	margin: 0 auto

.leme
	width 96%
	height 0
	padding-bottom 100%
	background-position 0.9% 0% !important
	background-size 1426%
	margin 0 auto

.config
	//position fixed
	width 2.3em !important
	background-color #47515b
	border-top-left-radius 50%
	border-top-right-radius 50%
	//bottom 8em
	padding 0.4em
	margin-bottom -0.2em
	//box-shadow 0px 3px 12px #000

button
	display block !important
	position relative !important
	font-family roboto_black

.tela-jogar
	button
		display block
		margin 0 auto
		width 25%
		box-shadow 0px 3px 12px #000

	.logo
		width 68%
		margin-bottom 6%

	.btn-game
		height 10%
		background-color #fff
		color #3d616f
		font-size 2.075em

	.btn-intrucoes
		background-color #3d616f
		color #fff
		font-size 1.363em
