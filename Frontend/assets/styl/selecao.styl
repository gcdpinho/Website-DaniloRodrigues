@import 'nib'

.selecao	
	.single
		background-position 27% 46%
		width 25%
		height 0
		padding-bottom 22%
		background-size 700%
		display inline-block
		float left
		
	.multi
		background-position 45% 46%
		width 25%
		height 0
		padding-bottom 22%
